@model EPS3.Models.Contract

@{
    ViewData["Title"] = "Details";
}
<script>
    @{  
        decimal TotalAmount = 0.00M;
        foreach (LineItem item in (IEnumerable<LineItem>)ViewData["LineItems"] as IEnumerable<LineItem>)
        {
            TotalAmount = TotalAmount + item.Amount;
        }

    }
</script>
<h2>Details</h2>

<div class="container-fluid">
    <div class="row panel panel-default" data-toggle="collapse" aria-expanded="true">
        <div class="panel-heading">
            <h3>
                Contract - @Html.DisplayFor(model => model.ContractNumber)
            </h3>
            <div class="float-right align-top">
                <h4>
                    <b>Current Status: </b> @Html.DisplayFor(model => model.CurrentStatus)
                </h4>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-2">
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.ContractNumber)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ContractNumber)
                        </dd>
                    </dl>
                </div>
                <div class="col-sm-2">
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.ContractType)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ContractType.ContractTypeSelector)
                        </dd>
                    </dl>
                </div>
                <div class="col-sm-2">
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.IsRenewable)
                        </dt>
                        <dd>
                            @(Model.IsRenewable.ToString().Equals("0") ? "No" : "Yes")
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.ContractTotal)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ContractTotal)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.MaxLoaAmount)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.MaxLoaAmount)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.BudgetCeiling)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.BudgetCeiling)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            Total of Line Items
                        </dt>
                        <dd>
                            $@TotalAmount
                        </dd>
                    </dl>
                </div>
                <div class="col-sm-2">
                    <dl>
                        <dt>
                            @Html.LabelFor(model => model.BeginningDate, htmlAttributes: new { @class = "control-label" })
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.BeginningDate)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            @Html.LabelFor(model => model.EndingDate, htmlAttributes: new { @class = "control-label" })
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.EndingDate)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            @Html.LabelFor(model => model.ServiceEndingDate, htmlAttributes: new { @class = "control-label" })
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ServiceEndingDate)
                        </dd>
                    </dl>
                </div>
                <div class="col-sm-3">
                    <dl>
                        <dt>
                            @Html.LabelFor(model => model.MethodOfProcurement, htmlAttributes: new { @class = "control-label" })
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.MethodOfProcurement.ProcurementSelector)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            @Html.LabelFor(model => model.ContractFunding, htmlAttributes: new { @class = "control-label" })
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ContractFunding.CompensationType)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            @Html.LabelFor(model => model.Vendor, htmlAttributes: new { @class = "control-label" })
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Vendor.VendorSelector)
                        </dd>
                    </dl>
                    <dl>
                        <dt>
                            @Html.LabelFor(model => model.Recipient, htmlAttributes: new { @class = "control-label" })
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Recipient.RecipientSelector)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <dl>
                        <dt>
                            @Html.LabelFor(model => model.DescriptionOfWork, htmlAttributes: new { @class = "control-label" })
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.DescriptionOfWork)
                        </dd>
                    </dl>
                </div> <!-- close col -->
            </div><!-- close row -->
        </div><!-- close panel-body -->
    </div><!-- close panel -->
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ContractID">Edit Contract</a> |
            <a asp-action="Index">Back to Contract List</a>
        </div>
        <br />
        <div class="row panel panel-default" data-toggle="collapse" aria-expanded="true">
            <div class="panel-heading">
                <h3>Line Items</h3>
            </div>
            <div class="panel-body row">
                <div class="col-sm-12">
                    <table class="table table-striped table-bordered" id="lineItemTable" style="width: 100%">
                        <thead>
                            <tr>
                                <th>
                                    <label for="OrgCode">Organization Code</label>
                                </th>
                                <th>
                                    <label for="ExpansionObject">EO</label>
                                </th>
                                <th>
                                    <label for="FlairObject">Object</label>
                                </th>
                                <th>
                                    <label for="Amount">Amount</label>
                                </th>
                                <th>
                                    <label for="FinancialProjectNumber">Fin Proj #</label>
                                </th>
                                <th>
                                    <label for="WorkActivity">Work Activity</label>
                                </th>
                                <th>
                                    <label for="Category">Category</label>
                                </th>
                                <th>
                                    <label for="OCA">OCA</label>
                                </th>
                                <th>
                                    <label for="StateProgram">State Program</label>
                                </th>
                                <th>
                                    <label for="FiscalYear">Fiscal Year</label>
                                </th>
                                <th>
                                    <label for="Fund">Fund</label>
                                </th>
                                <th>
                                    &nbsp;
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (LineItem item in (IEnumerable<LineItem>)ViewData["LineItems"] as IEnumerable<LineItem>)
                            {
                                <tr>
                                    <td>
                                        <span id="OrgCode" name="OrgCode">55-@item.OrgCode</span>
                                    </td>
                                    <td>
                                        <span id="ExpansionObject" name="ExpansionObject">@item.ExpansionObject</span>
                                    </td>
                                    <td>
                                        <span id="FlairObject" name="FlairObject">@item.FlairObject</span>
                                    </td>
                                    <td>
                                        <span id="Amount" name="Amount">@item.Amount.ToString("C")</span>
                                    </td>
                                    <td>
                                        <span id="FinancialProjectNumber" name="FinancialProjectNumber">@item.FinancialProjectNumber</span>
                                    </td>
                                    <td>
                                        <span id="WorkActivity" name="WorkActivity">@item.WorkActivity</span>
                                    </td>
                                    <td>
                                        <span id="Category" name="Category">@item.Category.CategorySelector</span>
                                    </td>
                                    <td>
                                        <span id="OCA" name="OCA">@item.OCA.OCASelector</span>
                                    </td>
                                    <td>
                                        <span id="StateProgram" name="StateProgram">@item.StateProgram.ProgramSelector</span>
                                    </td>
                                    <td>
                                        <span id="FiscalYear" name="FiscalYear">@item.FiscalYear</span>
                                    </td>
                                    <td>
                                        <span id="Fund" name="Fund">@item.Fund.FundSelector</span>
                                    </td>
                                    <td>
                                        <a asp-controller="LineItems" asp-action="Edit" asp-route-id="@item.LineItemID">Edit Line Item</a> <br />
                                        <a asp-controller="LineItems" asp-action="Delete" asp-route-id="@item.LineItemID">Delete Line Item</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div>
            <a asp-controller="LineItems" asp-action="Create" asp-route-id="@Model.ContractID">Add Line Item</a>
        </div>
        <div class="row panel panel-default">
            <div class="panel-heading">
                <h3>History</h3>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-striped table-bordered" id="lineItemTable" style="width: 100%">
                        <thead>
                            <tr>
                                <th>
                                    Updated By
                                </th>
                                <th>
                                    Status Date
                                </th>
                                <th>
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ContractStatus status in (IEnumerable<ContractStatus>)ViewData["Statuses"])
                            {
                                <tr>
                                    <td>
                                        <a href="mailto:@status.User.Email">@status.User.FirstName @status.User.LastName</a>
                                    </td>
                                    <td>
                                        @status.SubmittalDate
                                    </td>
                                    <td>
                                        @status.CurrentStatus
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <b>Comments: </b>@status.Comments
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
